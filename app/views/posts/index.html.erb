<h1>Listing posts</h1>

<table>
  <tr>
    <th>Goal</th>
    <th>Title</th>
    <th>Description</th>
    <th>Link</th>
    <th>Pubdate</th>
    <th>Guid</th>
    <th>Is visible</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.goal_id %></td>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.link %></td>
    <td><%= post.pubDate %></td>
    <td><%= post.guid %></td>
    <td><%= post.is_visible %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

