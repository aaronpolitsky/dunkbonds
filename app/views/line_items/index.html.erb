<h1>Listing line_items</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Status</th>
    <th>Type of</th>
    <th>Max bid min ask</th>
    <th>Goal</th>
    <th>Cart</th>
    <th>Order</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.account_id %></td>
    <td><%= line_item.status %></td>
    <td><%= line_item.type_of %></td>
    <td><%= line_item.max_bid_min_ask %></td>
    <td><%= line_item.goal_id %></td>
    <td><%= line_item.cart_id %></td>
    <td><%= line_item.order_id %></td>
    <td><%= line_item.price %></td>
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Destroy', line_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

