<!DOCTYPE html>
<html>
<head>
	<title>TwoODunkbonds</title>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :all %>
	<%= csrf_meta_tag %>
</head>
<header>
	<% if user_signed_in? %>
	<%= link_to "Cart", cart_path(current_user.cart)  %>
	<% end %>
</header>
<body>
	<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
	<% end %>
	<%= yield %>

</body>
</html>
