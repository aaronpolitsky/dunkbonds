<div class="span-10">
<!-- <div class="goalheader round"> -->
  <small>Selected Goal</small>
  <h3><%= link_to @goal.title, @goal %></h3>
</div>    
<div class="span-6 last" align='right' %>
  <small>
  <% if current_or_guest_user.supporting?(@goal) %>
    Supporting |
  <% end %> 
  <% if current_or_guest_user.following?(@goal) %>    
      <%= link_to 'Support This Goal', new_account_line_item_path(@account) %> 
      <% end %>  
  <hr class="nospace">
    
  <% if current_or_guest_user.following?(@goal) %>
    Following | <%= link_to 'Unfollow This Goal', [@goal, @account], :method => :delete  %>
  <% else %>
    <%= link_to 'Follow This Goal', new_goal_account_path(@goal) %>
  <% end %>

</small>

</div>
<hr class="nospace">
<div class="span-16 last">
  <ul class="tabs">
    <li><%= link_to "Goal Details", @goal, :class => selected?(goal_path(@goal))  %></li>       
    <li><%= link_to "Goal Blog", goal_posts_path(@goal), :class => selected?(goal_posts_path(@goal))  %></li>   
    <% if current_or_guest_user.following?(@goal) %>
    <li><%= link_to "Account", goal_account_path(@goal, @account), :class => selected?(goal_account_path(@goal, @account))  %></li>
    <li><%= link_to "Trade Bonds", new_account_line_item_path(@account), :class => selected?(new_account_line_item_path(@account)) %></li>  
    <% else %>
    <li><%= link_to "Account", new_goal_account_path(@goal), :class => selected?(new_goal_account_path(@goal)) %></li>
    <li><%= link_to "Trade Bonds", new_goal_account_path(@goal) %></li>  
    <% end %>
  </ul>
</div>


