<h1>Listing goals</h1>

<table class="goals">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>Period</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goals.each do |goal| %>
  <tr class="goal">
    <td><%= goal.title %></td>
    <td><%= goal.description %></td>
    <td><%= goal.starts_at %></td>
    <td><%= goal.ends_at %></td>
    <td><%= goal.period %></td>
    <td><%= link_to 'Show', goal %></td>
    <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
    <td><%= link_to 'Destroy', goal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

